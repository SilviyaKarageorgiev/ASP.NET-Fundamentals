@using MVCIntroDemo.ViewModels.Product
@model IEnumerable<ProductViewModel>

@{
    ViewData["Title"] = "All Products";
}

<form asp-controller="Product" asp-action="All" method="get">
    <div class="input-group">
        <input type="search" name="keyword" class="form-control rounded" placeholder="Search" aria-label="Search" aria-describedby="search-addon"/>
        <button type="submit" class="btn btn-outline-primary">search</button>
    </div>
</form>
<div class="card" style="width: 18rem">
    <div class="card-header">@ViewData["Title"]</div>
    <ul class="list-group list-group-flush">
        @foreach (ProductViewModel product in Model)
        {
            <li class="list-group-item"><a asp-controller="Product" asp-action="ById" asp-route-id="@product.Id">@product.Name - @product.Price$</a></li>
        }
    </ul>
</div>
<div>
    <a class="btn btn-primary" style="width: 20rem" asp-controller="Product" asp-action="DownloadProductsInfo">Download products info</a>
</div>